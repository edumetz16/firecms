{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@edumetz16/firecms_cloud": ["../../packages/firecms_cloud/src"],
      "@edumetz16/firecms_ui": ["../../packages/ui/src"],
      "@edumetz16/firecms_core": ["../../packages/firecms_core/src"],
      "@edumetz16/firecms_firebase": ["../../packages/firebase_firecms/src"],
      "@edumetz16/firecms_data_enhancement": ["../../packages/data_enhancement/src"],
      "@edumetz16/firecms_data_import_export": ["../../packages/data_import_export/src"],
      "@edumetz16/firecms_user_management": ["../../packages/user_management/src"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "build"]
}
