{
  "name": "firecms-parent",
  "private": true,
  "description": "Awesome Firebase/Firestore-based headless open-source CMS",
  "author": "FireCMS",
  "homepage": "https://firecms.co",
  "workspaces": [
    "packages/firecms",
    "packages/firecms_cloud",
    "packages/firecms_core",
    "packages/cli",
    "packages/ui",
    "packages/datatalk",
    "packages/create_firecms_app",
    "packages/mongodb",
    "packages/firebase_firecms",
    "packages/collection_editor",
    "packages/collection_editor_firebase",
    "packages/user_management",
    "packages/data_import_export",
    "packages/schema_inference",
    "packages/data_enhancement",
    "packages/user_management",
    "packages/formex",
    "packages/editor",
    "examples/example_cloud",
    "examples/example",
    "examples/example_pro"
  ],
  "scripts": {
    "dev": "cd examples/example && run-s dev",
    "pro": "cd examples/example_pro && run-s dev",
    "cloud": "cd examples/example_cloud && run-s dev",
    "saas": "cd saas && run-s dev",
    "datatalk": "cd saas_datatalk && run-s dev",
    "deploy:demo": "cd examples/example_pro && run-s deploy",
    "preview": "cd examples/example_pro && run-s preview",
    "deploy:staging": "lerna run build && cd saas && run-s build && run-s deploy:staging",
    "deploy:prod": "lerna run build && cd saas && run-s build && run-s deploy:prod",
    "deploy:canary": "lerna run build && cd saas && run-s build && run-s deploy:canary",
    "web": "cd website && run-s dev",
    "deploy:web": "cd website && run-s deploy",
    "build": "lerna run build",
    "build:stream": "lerna run build --stream --loglevel=info",
    "clean": "lerna run clean",
    "release": "git push origin main:release"
  },
  "devDependencies": {
    "lerna": "^8.1.3",
    "npm-run-all": "^4.1.5"
  }
}
